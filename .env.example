Application
APPNAME=AI Medical Receptionist
CLINICNAME=HealthCare Clinic
VERSION=1.0.0

Server
APIHOST=0.0.0.0
APIPORT=8000
VOICEPORT=8003

Database
DATABASEURL=sqlite:///./medicalreceptionist.db

LLM Configuration
LLMPROVIDER=ollama
LLMMODEL=llama3.1:8b
LLMTEMPERATURE=0.7
LLMMAXTOKENS=150

MIMIC-IV
MIMICDATAPATH=./mimicdata
ENABLEMEDICALQA=true

Voice
SPEECHRATE=1.2
ENABLEVOICERECORDING=true

Clinic Settings
APPOINTMENTDURATIONMINUTES=30
CLINICHOURSSTART=08:00
CLINICHOURSEND=17:00

# Email Settings
SMTPSERVER=smtp.gmail.com
SMTPPORT=587
# Your full Gmail address
SMTPUSERNAME=your-email@gmail.com
# The 16-char App Password (no spaces needed, but spaces are fine)
SMTPPASSWORD=abcd efgh ijkl mnop
# The email address you want patients to see as the sender
SENDEREMAIL=your-email@gmail.com
ENABLEEMAILNOTIFICATIONS=True